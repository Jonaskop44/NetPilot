generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMINISTRATOR
  TEACHER
  STUDENT
}

model User {
  id                   Int                   @id @default(autoincrement())
  email                String                @unique
  username             String
  providerId           String                @unique
  role                 Role                  @default(STUDENT)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  scheduledRuleChanges ScheduledRuleChange[]
  userPromotions       UserPromotion[]       @relation("PromotedUser")
  performedPromotions  UserPromotion[]       @relation("PromotingAdmin")
}

model UserPromotion {
  id           Int      @id @default(autoincrement())
  userId       Int
  promotedById Int
  toRole       Role
  createdAt    DateTime @default(now())

  user           User @relation("PromotedUser", fields: [userId], references: [id], onDelete: Cascade)
  promotingAdmin User @relation("PromotingAdmin", fields: [promotedById], references: [id], onDelete: Cascade)

  @@unique([userId, promotedById, toRole])
}

model ScheduledRuleChange {
  id           Int       @id @default(autoincrement())
  ruleUuid     String
  action       String
  scheduledFor DateTime
  executed     Boolean   @default(false)
  executedAt   DateTime?
  createdBy    Int
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  user         User      @relation(fields: [createdBy], references: [id])
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@index([expire])
}
